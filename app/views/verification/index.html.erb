<div class="verification-container">
  <div class="verification-card">
    <div class="card-header">
      <h2>Verify Your Email</h2>
    </div>

    <div class="card-body">
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>

      <p>We've sent a verification code to <strong><%= current_user.email %></strong>. Please check your email and enter the code below to verify your account.</p>

      <%= form_with url: verify_path, method: :post, class: "verification-form" do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>

        <div class="form-group">
          <label for="verification_code">Verification Code</label>
          <%= f.text_field :code, class: "form-control", placeholder: "Enter 6-digit code", maxlength: 6, required: true, pattern: "\d{6}", inputmode: "numeric" %>
        </div>

        <div class="form-actions">
          <%= f.submit "Verify Email", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="resend-section">
        <p>Didn't receive the code? </p>
        <%= button_to "Resend Code", resend_verification_code_path, method: :post, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>

<style>
  .verification-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 20px;
  }

  .verification-card {
    width: 100%;
    max-width: 500px;
    background-color: var(--card-bg, #fff);
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .card-header {
    background-color: var(--primary-color, #3949ab);
    color: white;
    padding: 20px;
    text-align: center;
  }

  .card-header h2 {
    margin: 0;
    font-size: 24px;
  }

  .card-body {
    padding: 30px;
  }

  .verification-form {
    margin-top: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
  }

  .form-control {
    width: 100%;
    padding: 12px 15px;
    font-size: 18px;
    border: 2px solid #ddd;
    border-radius: 6px;
    background-color: var(--input-bg, #fff);
    color: var(--text-color, #333);
    text-align: center;
    letter-spacing: 4px;
    transition: border-color 0.3s;
  }

  .form-control:focus {
    border-color: var(--primary-color, #3949ab);
    outline: none;
  }

  .btn {
    display: inline-block;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 500;
    text-align: center;
    cursor: pointer;
    border: none;
    border-radius: 6px;
    transition: all 0.3s;
  }

  .btn-primary {
    background-color: var(--primary-color, #3949ab);
    color: white;
    width: 100%;
  }

  .btn-primary:hover {
    background-color: var(--primary-dark, #303f9f);
  }

  .btn-outline-secondary {
    background-color: transparent;
    color: var(--primary-color, #3949ab);
    border: 1px solid var(--primary-color, #3949ab);
  }

  .btn-outline-secondary:hover {
    background-color: rgba(57, 73, 171, 0.1);
  }

  .form-actions {
    margin-top: 30px;
  }

  .resend-section {
    margin-top: 30px;
    text-align: center;
    padding-top: 20px;
    border-top: 1px solid #eee;
  }

  .alert {
    padding: 12px 15px;
    border-radius: 6px;
    margin-bottom: 20px;
  }

  .alert-success {
    background-color: #e8f5e9;
    color: #2e7d32;
    border: 1px solid #c8e6c9;
  }

  .alert-danger {
    background-color: #ffebee;
    color: #c62828;
    border: 1px solid #ffcdd2;
  }
</style>
