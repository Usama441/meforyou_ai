<script>
    // Warning banner functionality
    document.addEventListener('DOMContentLoaded', function() {
        const warningBanner = document.getElementById('warningBanner');
        const closeBtn = document.getElementById('closeBanner');

        // Check if banner was previously dismissed
        if (localStorage.getItem('bannerDismissed') === 'true') {
            warningBanner.style.display = 'none';
            document.body.style.paddingTop = '0';
        }

        // Close banner when button is clicked
        closeBtn.addEventListener('click', function() {
            warningBanner.style.display = 'none';
            document.body.style.paddingTop = '0';
            localStorage.setItem('bannerDismissed', 'true');
        });
    });

    // PNG Animation functionality
    document.addEventListener('DOMContentLoaded', function() {
        const images = document.querySelectorAll('.hero-png');

        function respawn(img) {
            // Random position
            const x = Math.random() * (window.innerWidth - 100); // Adjusted for larger image size
            const y = Math.random() * (window.innerHeight - 100); // Adjusted for larger image size
            img.style.left = `${x}px`;
            img.style.top = `${y}px`;

            // Fade in
            img.classList.add('state-fade-in');
            img.classList.remove('state-fade-out');

            // Stay visible for 5 seconds then fade out (increased from 3 seconds)
            setTimeout(() => {
                img.classList.remove('state-fade-in');
                img.classList.add('state-fade-out');
            }, 5000); // Changed from 3000 to 5000

            // After fade out, respawn again
            setTimeout(() => {
                respawn(img);
            }, 8000); // Changed from 6000 to 8000 to give more time between respawns
        }

        // Start all images
        images.forEach((img, index) => {
            setTimeout(() => respawn(img), index * 1000); // Reduced delay between images starting
        });
    });

    // Smooth scrolling for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Navigation scroll effect
    window.addEventListener('scroll', function() {
        const nav = document.querySelector('.main-navigation');
        if (window.scrollY > 50) {
            nav.style.background = 'rgba(10, 10, 10, 0.99)';
            nav.style.borderBottom = '1px solid rgba(42, 42, 42, 0.4)';
        } else {
            nav.style.background = 'rgba(10, 10, 10, 0.98)';
            nav.style.borderBottom = '1px solid rgba(42, 42, 42, 0.2)';
        }
    });

    // Add scroll animations
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate');
            }
        });
    }, observerOptions);

    // Observe elements for animation
    document.querySelectorAll('.value-card, .feature-card, .process-step, .testimonial-card, .section-header, .cta-title, .cta-subtitle, .cta-button-container').forEach(element => {
        observer.observe(element);
    });
</script>
