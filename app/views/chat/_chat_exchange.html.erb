<div class="chat-box">
  <div class="chat-header">
    <h1>MeForYou.AI</h1>
  </div>

  <p class="greeting">
    Hello <%= current_user.name.present? ? current_user.name.capitalize : "there" %>, ask something to your AI companion:
  </p>

  <div class="chat-history" id="chatHistory">
    <% chats.each do |chat| %>
      <% if chat.role == "user" %>
        <div class="chat-bubble user">
          <div class="avatar">ðŸ‘¤</div>
          <div>
            <p><strong>You:</strong> <%= chat.message %></p>
            <span class="timestamp"><%= chat.created_at.strftime("%H:%M") %></span>
          </div>
        </div>
      <% else %>
        <div class="chat-bubble bot">
          <div class="avatar">ðŸ¤–</div>
          <div>
            <p><strong><%= @ai_name %>:</strong> <%= chat.reply %></p>
            <span class="timestamp"><%= chat.created_at.strftime("%H:%M") %></span>
          </div>
        </div>
      <% end %>
    <% end %>



  </div>

  <!-- âœ… Only one form (no duplicate) -->
  <div class="chat-options">
    <form id="chat-form" data-conversation-id="<%= @conversation.id %>">
      <input type="text" id="chat-input" name="message" placeholder="Type your message..." />
      <button type="submit">></button>
    </form>
  </div>

</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const chatInput = document.getElementById("chat-input");
        const sendButton = document.querySelector("#chat-form button");
        const chatForm = document.getElementById("chat-form");

        function toggleButton() {
            if (chatInput.value.trim() === "") {
                sendButton.style.display = "none";
            } else {
                sendButton.style.display = "block";
            }
        }

        function scrollToBottom() {
            const chatHistory = document.getElementById("chatHistory");
            if (chatHistory) {
                chatHistory.scrollTop = chatHistory.scrollHeight;
            }
        }

        // Initial toggle and scroll on load
        toggleButton();
        scrollToBottom();

        chatInput.addEventListener("input", toggleButton);

        chatForm.addEventListener("submit", function (e) {
            e.preventDefault();
            // Your AJAX or form submit logic here to send message

            // After message added (simulate with timeout if async)
            setTimeout(() => {
                scrollToBottom();
                chatInput.value = "";
                toggleButton();
                chatInput.focus();
            }, 100);
        });
    });

</script>