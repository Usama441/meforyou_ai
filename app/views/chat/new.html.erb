<main class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl shadow-xl w-full max-w-2xl p-8 space-y-6 border border-gray-200">
    <div class="flex items-center justify-between">
      <h1 class="text-3xl font-bold text-blue-800">MeForYou.AI</h1>

    </div>

    <p class="text-gray-600">
      Hello <%= current_user.relationship.present? ? current_user.relationship.capitalize : "there" %>, ask something to your AI companion:
    </p>


    <%= form_with url: chat_path, method: :post, local: true, class: "space-y-4" do %>
      <%= text_field_tag :message, nil, placeholder: "Type your message...", class: "w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <div>
        <%= submit_tag "Send", class: "bg-blue-600 text-white px-6 py-2 rounded-xl hover:bg-blue-700 transition" %>
      </div>
    <% end %>

    <% if @chats.present? %>
      <div class="mt-6">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">Recent Conversations:</h2>
        <div class="space-y-4 max-h-64 overflow-y-auto pr-2">
          <% @chats.each do |chat| %>
            <div class="p-4 bg-gray-50 border rounded-xl">
              <p class="text-gray-800"><strong>You:</strong> <%= chat.message %></p>
              <p class="text-gray-700 mt-1"><strong>AI:</strong> <%= chat.reply %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</main>