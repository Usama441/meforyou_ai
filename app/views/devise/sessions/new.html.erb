<script>
    document.addEventListener("DOMContentLoaded", () => {
        const loginBox = document.querySelector(".login-box");
        const glow = document.querySelector(".hover-glow");
        const togglePassword = document.querySelector(".toggle-password");
        const passwordField = document.querySelector(".password-wrapper input");

        // Hover glow effect only inside login-box
        if (loginBox && glow) {
            loginBox.addEventListener("mousemove", (e) => {
                const rect = loginBox.getBoundingClientRect();
                const glowWidth = glow.offsetWidth;
                const glowHeight = glow.offsetHeight;

                // Center glow on cursor
                const x = e.clientX - rect.left - glowWidth / 2;
                const y = e.clientY - rect.top - glowHeight / 2;
                glow.style.transform = `translate(${x}px, ${y}px)`;
            });

            loginBox.addEventListener("mouseenter", () => {
                glow.style.opacity = "1";
            });

            loginBox.addEventListener("mouseleave", () => {
                glow.style.opacity = "0";
            });
        }

        // Password show/hide toggle
        if (togglePassword && passwordField) {
            togglePassword.addEventListener("click", () => {
                passwordField.type = passwordField.type === "password" ? "text" : "password";
            });
        }
    });
</script>


