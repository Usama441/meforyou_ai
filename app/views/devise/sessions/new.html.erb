            </svg>
          </a>
          <!-- LinkedIn -->
          <a href="#" class="circle" aria-label="LinkedIn">
            <svg viewBox="0 0 448 512" xmlns="http://www.w3.org/2000/svg">
              <path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1a53.79 53.79 0 1 1 53.79-53.8 53.79 53.79 0 0 1-53.79 53.8zM447.9 448h-92.4V304.1c0-34.3-12.3-57.7-43.1-57.7-23.5 0-37.6 15.8-43.8 31.1-2.3 5.4-2.9 12.9-2.9 20.4V448h-92.4s1.2-270.5 0-298.9h92.4v42.3c12.3-19 34.3-46 83.6-46 61 0 106.8 39.8 106.8 125.4V448z"/>
            </svg>
          </a>
          <!-- Facebook -->
          <a href="#" class="circle" aria-label="Facebook">
            <svg viewBox="0 0 320 512" xmlns="http://www.w3.org/2000/svg">
              <path d="M279.14 288l14.22-92.66H196.6V129.77c0-25.35 12.42-50.06 52.24-50.06H293V6.26S269.91 0 247.13 0c-73.41 0-121.1 44.38-121.1 124.72V195.3H86.41V288h39.62v224h92.16V288z"/>
            </svg>
          </a>
        </div>

        <span class="login-subtext">or use your account</span>

        <!-- Rails Form -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |form| %>
          <div class="form-group input-wrapper">
            <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-input #{'input-error' if resource.errors[:email].present?}" %>
          </div>
          <div class="form-group input-wrapper password-wrapper">
            <%= form.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-input #{'input-error' if resource.errors[:password].present?}" %>
            <span class="toggle-password">&#128065;</span>
          </div>
          <% if devise_mapping.recoverable? %>
            <div class="form-group forgot-password">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            </div>
          <% end %>
          <div class="form-group">
            <%= form.submit "Sign In", class: "login-button" %>
          </div>
        <% end %>
      </div>

      <!-- Animated Text Section -->
      <div class="animated-text-section">
        <h3 class="animated-text-title">Welcome to RENATA</h3>
        <div class="animated-text-container">
          <div class="animated-text" id="animatedText"></div>
        </div>
      </div>
    </div>
  </div>
</main>

