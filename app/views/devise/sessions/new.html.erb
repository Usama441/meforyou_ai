<main class="login-container">
  <div class="login-box">
    <h1>Welcome Back</h1>

    <% if flash[:alert] %>
      <div class="bg-red-100 text-red-800 p-2 mb-4 rounded">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with scope: :user, url: session_path(:user), local: true do |form| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <%= form.label :email %>
      <%= form.email_field :email, required: true %>

      <%= form.label :password %>
      <%= form.password_field :password, required: true %>

      <%= form.submit "Login", class: "bg-blue-600 text-white px-6 py-2 rounded-xl hover:bg-blue-700 transition mt-4" %>
    <% end %>
  </div>
</main>
