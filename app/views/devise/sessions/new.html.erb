<div class="auth-container">
  <div class="auth-card">
    <h2>Welcome Back</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.submit "Login", class: "login-button" %>
      </div>
      <div class="form-group">
        <%= link_to "Sign Up", new_user_registration_path, class: "signup-button" %>
      </div>
    <% end %>
  </div>
</div>
