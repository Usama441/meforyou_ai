<div class="video-background">
  <video autoplay muted loop playsinline>
    <source src="/videos/bg.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>
<div class="login-container">
  <%= image_tag "logo.png", alt: "Logo", class: "login-logo" %>
  <div class="login-box">


    <div class="auth-card">
      <h2>Welcome Back</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-input #{'input-error' if resource.errors[:email].present?}" %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, autocomplete: "current-password", class: "form-input #{'input-error' if resource.errors[:password].present?}" %>
        </div>

        <% if devise_mapping.recoverable? %>
          <div class="form-group forgot-password">
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.submit "Login", class: "login-button" %>
        </div>
      <% end %>

      <div class="separator-line">OR</div>

      <div class="form-group">
        <%= link_to "Sign Up", new_user_registration_path, class: "signup-button", role: "button" %>
      </div>
    </div>
  </div>
</div>

