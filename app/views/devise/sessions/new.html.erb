<!-- Navigation Header -->
<header class="nav-header">
  <nav class="nav-container" role="navigation" aria-label="Main Navigation">
    <!-- App Name as SVG -->
    <div class="nav-brand" aria-hidden="false">
      <!-- Inline SVG for RENATA (scalable, themeable) -->
      <svg class="app-name-svg" viewBox="0 0 400 48" xmlns="http://www.w3.org/2000/svg" role="img" aria-labelledby="renataTitle renataDesc">
        <title id="renataTitle">RENATA</title>
        <desc id="renataDesc">Application name RENATA styled logo</desc>
        <defs>
          <linearGradient id="renataGradient" x1="0" x2="1" y1="0" y2="0">
            <stop offset="0%" stop-color="#00d4ff"/>
            <stop offset="100%" stop-color="#0077ff"/>
          </linearGradient>
          <filter id="softGlow" x="-30%" y="-30%" width="160%" height="160%">
            <feGaussianBlur stdDeviation="3" result="blur"/>
            <feMerge>
              <feMergeNode in="blur"/>
              <feMergeNode in="SourceGraphic"/>
            </feMerge>
          </filter>
        </defs>

        <!-- Text uses system font stack; will render crisp. If you prefer an outline/path logo, we can convert later. -->
        <text x="0" y="34" font-family="Inter, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial" font-weight="700" font-size="32" fill="url(#renataGradient)" filter="url(#softGlow)" letter-spacing="2">
          RENATA
        </text>
      </svg>
    </div>

    <!-- Menu Links -->
    <ul class="nav-links">
      <li><a href="#">Home</a></li>
      <li><a href="#">Features</a></li>
      <li><a href="#">Pricing</a></li>
      <li><a href="#">Contact</a></li>
    </ul>

    <!-- Buttons -->
    <div class="nav-actions">
      <%= link_to "Login", new_user_session_path, class: "nav-btn nav-login" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "nav-btn nav-signup" %>
    </div>
  </nav>
</header>


<!-- Background Video -->
<div class="video-background">
  <video autoplay muted loop playsinline>
    <source src="/videos/bg.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>

<!-- Login Section -->
<div class="login-container">



  <div class="login-box">
    <div class="hover-glow"></div>

    <div class="auth-card">
      <h2 class="login-title">Welcome Back</h2>

      <!-- Social Buttons -->
      <div class="social-container">
        <!-- Instagram -->
        <a href="#" class="circle" aria-label="Instagram">
          <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
