<main class="signup-container">
  <div class="signup-box">
    <h1>ğŸ‘‹ Create Your Me4You </h1>
    <%= form_for(resource, as: :user, url: registration_path(:user)) do |form| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, required: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :ai_name, "Your AI's Name" %>
        <%= form.text_field :ai_name, required: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :relationship, "Relationship with AI" %>
        <%= form.select :relationship, ["friend", "mother", "partner", "mentor", "assistant"], prompt: "Select", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, required: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, required: true, class: "form-input" %>
      </div>

      <%= form.submit "ğŸš€ Sign up", class: "submit-btn" %>
    <% end %>

    <p class="form-footer">
      Already have an account?
      <%= link_to "Log in", new_user_session_path, class: "login-link" %>
    </p>
  </div>
</main>
