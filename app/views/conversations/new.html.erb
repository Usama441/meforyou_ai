<h2>Start New Conversation</h2>

<%= form_with model: @conversation, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, "AI Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :relationship, "Relationship Type" %>
    <%= f.select :relationship, ChatHelper::RELATIONSHIP_OPTIONS, {}, class: "form-control" %>
  </div>

  <%= form.submit "Create Conversation", class: "btn btn-primary" %>
<% end %>
